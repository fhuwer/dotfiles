# ~/.init

if [[ "`hostname`" == "ewpc5" ]]; then
   # Set python path
   export PATH=/opt/python-3.6.2/bin:$PATH
   export LD_LIBRARY_PATH=/opt/python-3.6.2/lib:$LD_LIBRARY_PATH
   export VIRTUALENVWRAPPER_PYTHON=/opt/python-3.6.2/bin/python3

   # Source ROOT
   source /opt/root-git-py3.6/bin/thisroot.sh
   alias root="root -l"

   # Load virtualenv
   export WORKON_HOME=~/.pyenvs
   [[ ! -a "$WORKON_HOME" ]] && mkdir "$WORKON_HOME"
   source /usr/local/bin/virtualenvwrapper.sh

   # Set arduino paths
   export ARDUINO_DIR=/opt/arduino
   export ARDMK_DIR=/opt/arduino-mk
fi

if [[ "`hostname`" == "rathong" ]]; then
   export PATH=/home/friedemann/bin:$PATH

   # Source ROOT
   source /opt/root-git/bin/thisroot.sh
   alias tbrowser='root -x ~/.config/root/macros/TBrowserOpen.C'
   alias tb='tbrowser'

   # Source vte (needed so a new terminal tab opens in the same working directory)
   source /etc/profile.d/vte.sh

   source /usr/bin/virtualenvwrapper.sh
fi

if [[ "`hostname`" == "sagarmatha" ]]; then
   export PATH=/home/friedemann/bin:$PATH

   source /usr/bin/virtualenvwrapper.sh
fi

# FZF
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

if [[ -a "$HOME/.pythonrc.py" ]]; then
   export PYTHONSTARTUP=$HOME/.pythonrc.py
fi
