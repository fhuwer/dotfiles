# ~/.zsh_aliases
# vim:fdm=marker:foldlevel=0

# Common terminal aliases
# ls
alias ll='ls -ahlF'
alias la='ls -A'
alias l='ls -hl'

# Open
function open() { xdg-open $1 >/dev/null 2>&1 &! }

# Alias for Python
alias py="python"

# Space
alias space="df -h"
alias duf="du -d 1 -h -t 50M 2>/dev/null"

# Remote Desktop
alias rzdv="rdesktop -u fneuhaus@uni-mainz.de -g 1366x768 rds.zdv.uni-mainz.de -f"

# Clean Latex folder
alias rmtex="latexmk -C --quiet"

# File handlers
alias -s pdf="open"

# Check for neovim
if `hash nvim 2>/dev/null`; then
   alias vim='nvim'
   export EDITOR="nvim"
   export VISUAL="nvim"
fi

# Check for local aliases file
if [[ -a "$HOME/.zsh_aliases_local" ]]; then
   source $HOME/.zsh_aliases_local
fi
