# ~/.zshrc_aliases

# Default settings for pdfpc and converter for latex generated notes
alias pdfpc='pdfpc --current-size=60 --next-height=40'
alias pnote="sed -i \"s/\\\\\\\\\\\\\\\\/\n/g\" " 

# ls
alias ll='ls -ahlF'
alias la='ls -A'
alias l='ls -hl'

# Space
alias space="df -h"
alias duf="du -d 1 -h -t 50M 2>/dev/null"

# Alias for Python3
alias py="python3"
alias py3="python3"

# Remote Desktop
alias rzdv="rdesktop -u fneuhaus@uni-mainz.de -g 1366x768 rds.zdv.uni-mainz.de -f"

# Run detached
function run() { nohup $@ > /dev/null 2>&1 &; disown; }

# Open
function open() { xdg-open $1 &> /dev/null; }

# Clean Latex folder
alias rmtex="latexmk -C --quiet" 

# Disable root splashscreen
alias root="root -l"

# Check for neovim
if [[ "`hostname`" == "ewpc5" ]] || [[ "`hostname`" == "rathong" ]]; then
   [[ -e "`which nvim | grep -v aliased | head -1`" ]] && alias vim='TERM=tmux-256color nvim'
else
   [[ -e "`which nvim | grep -v aliased | head -1`" ]] && alias vim='nvim'
fi
[[ -e "`which nvim | grep -v aliased | head -1`" ]] && export EDITOR="nvim" 

# Check for local aliases file
if [[ -a "$HOME/.zsh_aliases_local" ]]; then
   source $HOME/.zsh_aliases_local
fi
